<%= simple_form_for(@oportunity) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :budget %>
    <%= f.input :money %>
    <%= f.input :published_date %>
    <%= f.input :deadline %>
    <%= f.input :result_date %>
    <%= f.association :company %>
    <%= f.association :category %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

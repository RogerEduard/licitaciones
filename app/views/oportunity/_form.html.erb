<%= simple_form_for @oportunity, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :budget %>
  <%= f.input :money %>
  <%= f.input :published_date %>
  <%= f.input :deadline %>
  <%= f.input :result_date %>
  <%= f.input :company_id %>
  <%= f.input :category_id %>
  <%= f.input :status %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                oportunity_path, :class => 'btn' %>
  </div>
<% end %>
